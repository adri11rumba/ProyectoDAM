<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondopantalla"
    tools:context=".MainActivity2">


    <Button
        android:id="@+id/ficharSalida"
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/desingbotones"

        android:text="Fichar salida"
        app:layout_constraintBottom_toBottomOf="@+id/ficharEntrada"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/ficharEntrada"
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/desingbotones"

        android:text="Fichar entrada"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonCerrarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="Cerrar sesión"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/botonListado"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="556dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/desingbotones"

        android:text="ÚLTIMOS FICHAJES"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>